<div class="login-container">
  <form {{action 'authenticate' on='submit'}}>  
    {{input id='identification' value=identification placeholder="Email" type="email" class=(if error 'error')}}
    {{input id='password' value=password placeholder="Password" type="password" class=(if error 'error')}}
    <button type="submit">Login</button>
   </form>
</div>