<div class="container">
  <form {{action 'save' model on='submit'}}>
      {{input type="text" value=model.firstName placeholder="First Name" class=(if model.errors 'error')}}
      {{input type="text" value=model.lastName placeholder="Last Name" class=(if model.errors 'error')}}
      {{input type="email" value=model.email placeholder="Email" class=(if model.errors 'error')}}
      {{input type="text" value=model.password placeholder="Password" class=(if model.errors 'error')}}
      <div class="btn-group ">
        <button type="submit" class="primary-button btn small m-r">Save</button>
        {{#link-to "dashboard.users" class="secondary-button btn small" tagName="button"}}Cancel{{/link-to}}
      </div>
  </form>
</div>