<div class="container">
  {{#each model.frameworks as |framework|}}
    {{#link-to "dashboard.frameworks.show" framework.id class="card"}}
      {{framework.name}}
    {{/link-to}}
  {{/each}}
  {{#if admin}}
    {{#link-to "dashboard.frameworks.new" model.id class="primary-button btn large"}}
      <span>+</span>
    {{/link-to}}
  {{/if}}
  {{#each model.posts as |post|}}
  {{#link-to "dashboard.posts.show"  post.id class="block"}}
    {{post.title}}
  {{/link-to}}
  {{/each}}
  {{#link-to "dashboard.posts.new"  (query-params  framework_id=null language_id=model.id) class="primary-button btn long"}} 
  <span>+</span>
  {{/link-to}}
</div>