<div class="container">
  <form {{action 'save' model on='submit'}}>
      {{input type="text" value=model.firstName placeholder="First Name" class=(if model.errors 'error')}}
      {{input type="text" value=model.lastName placeholder="Last Name" class=(if model.errors 'error')}}
      {{input type="text" value=model.email placeholder="Email" class=(if model.errors 'error')}}
      <label for='upload'><img class="avatar" src={{model.photo}}/></label>
      {{#photo-upload file= model.photo id="upload"}}{{/photo-upload}} 
      <div class="btn-group ">
        <button type="submit" class="primary-button btn small m-r">Save</button>
        {{#link-to "dashboard.languages" class="secondary-button btn small" tagName="button"}}Cancel{{/link-to}}
      </div>
  </form>
</div>